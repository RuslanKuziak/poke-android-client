<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.Poke.Text" parent="">
		<item name="android:textColor">@color/black_light_alpha_50</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Widget.Poke.Text.Info" parent="Widget.Poke.Text">
		<item name="android:textSize">16sp</item>
		<item name="android:background">@color/gray_light</item>
	</style>

	<style name="Widget.Poke.Text.Title" parent="Widget.Poke.Text">
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textSize">32sp</item>
	</style>

	<style name="Widget.Poke.Text.Type" parent="Widget.Poke.Text">
		<item name="android:textColor">@color/gray_light</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Widget.Poke.Text.Message" parent="">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/black_light_alpha_50</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Widget.Poke.Text.Action" parent="Widget.Poke.Text">
		<item name="android:textStyle">bold</item>
	</style>

</resources>